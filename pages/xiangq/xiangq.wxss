/* pages/xiangq/xiangq.wxss */
.xiangq_bei{
  width: 100%;
  height: 750rpx;
}
.wanshan_box{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
}
.wanshan{
  width: 537rpx;
  height: 436rpx;
  background: white;
  border-radius: 22rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  left: 107rpx;
}
.wanshan .tishi{
  text-align: center;
  font-size: 34rpx;
  color: #3F3F3F;
  margin-top: 40rpx;
}
.wanshan .wan_con{
  width: 428rpx;
  margin: 30rpx auto 0;
  font-size: 28rpx;
  color: #7B7B7B;
}
.anniu{
  width: 428rpx;
  margin: 40rpx auto 0;
  display: flex;
  justify-content: space-between;
}
.anniu view{
  font-size: 30rpx;
  width: 188rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  border-radius: 38px;
}
.anniu view:nth-of-type(1){
  background: #C3C3C3;
  color: #555555;
}
.anniu view:nth-of-type(2){
  background: #3D3D3D;
  color: #FFFFFF;
}
.con_detail{
  width: 100%;
  padding: 0 28rpx 0 32rpx;
  box-sizing: border-box;
}
.name_detail{
  font-size: 40rpx;
  color: #3F3F3F;
  margin-top: 29rpx;
  margin-bottom: 18rpx;
}
.lianxi{
  font-size: 26rpx;
color: #C2C2C2;
margin-bottom: 5rpx;
}
.xian{
  width: 100%;
  height: 1rpx;
  background: #DDDDDD;
  margin: 30rpx auto 34rpx;
}
.btn_box{
  display: flex;
}
.btn_detail{
  width: 206rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  color: #FFFFFF;
  border-radius: 38px;
  background: #3D3D3D;
  margin: 80rpx auto;
}